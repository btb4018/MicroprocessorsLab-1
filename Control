	#include <xc.inc>


psect	code, abs
	
main:
	org	0x0
	goto	start

	org	0x100		    ; Main code starts here at address 0x100
start:
	movlw	0xff
	movwf	TRISD, A
	movlb	0x0f
	bsf RDPU
	
	setf		TRISE		; Tri-state PortE	 	
	banksel 	PADCFG1	; PADCFG1 is not in Access Bank!!
	bsf		REPU		; PortE pull-ups on 
	movlb		0x00		; set BSR back to Bank 0
	
	CP1h EQU 0x0c			; CP1 high, EO1 high
	CP1l EQU 0x08			; CP1 low, EO1 high
	EO1h EQU 0x0c			; CP1 high, EO1 high
	EO1l EQU 0x04			; CP1 high, EO1 low
	
	movlw	0xff
	movwf	0x20
	
	movlw	CP1h
	movwf	PORTD, A
	
	call cp1
	
	goto	$
	
	
cp1:	call	delay
	movlw	CP1l
	movwf	PORTD, A
	call	delay
	movlw	CP1h
	movwf	PORTD, A
	return
	
oe1:	call	delay
	movlw	EO1l
	movwf	PORTD, A
	call	delay
	movlw	EO1h
	movwf	PORTD, A
	return
	
delay:	decfsz	0x20, A	; decrement until zero
	bra	delay
	return
	
	
	end	main
